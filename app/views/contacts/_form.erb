<%
form_heading     = "Add Contact"
form_description = "Complete this form to enter a new contact."
form_action      = "/contacts"
form_submit      = "Add"

if (@page == "edit") then
  form_heading     = "Edit Contact"
  form_description = "Complete this form to update an existing contact."
  form_action      = "/contacts/edit"
	form_submit      = "Update"
end
%>

<div class="container-vertical">
	<div class="form-wrapper">
		<form class="form" action="<%= form_action %>" method="post">
			<h1><%= form_heading %></h1>
			<p><%= form_description %></p>
			
			<% if (@errors.length > 0) then %>
			<div class="form-errors">
				Errors:
				<ul>
					<% @errors.each do |error| %>
					<li><%= error %></li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="form-group">
				<label for="title">Title:</label>
				<input type="text" id="title" name="title" value="<%= @contact.title %>">
			</div>

			<div class="form-group">
				<label for="value">Value:</label>
				<input type="text" id="value" name="value" value="<%= @contact.value %>">
			</div>

			<div class="form-group submit">
				<button class="btn"><%= form_submit %></button>
			</div>
			
			<input type="hidden" id="contactId" name="contactId" value="<%= @contact.id %>">
		</form>			
	</div>
</div>